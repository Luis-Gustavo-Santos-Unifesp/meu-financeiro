// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Categoria {
  id       Int       @id @default(autoincrement())
  nome     String
  despesas Despesa[]
}

model Despesa {
  id          Int       @id @default(autoincrement())
  descricao   String
  valor       Float
  data        DateTime
  categoriaId Int
  categoria   Categoria @relation(fields: [categoriaId], references: [id])
}
